@{
}
@if (!string.IsNullOrWhiteSpace(ViewBag.Token))
{
    <div class="container d-flex justify-content-center align-items-center" style="margin-top: 5vh">
        <div class="toast align-items-center show bg-success text-white" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Your JWT Token is: <br />
                    @Html.Raw(@ViewBag.Token)
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
}      
